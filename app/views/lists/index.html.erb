<h1>All the lists</h1>

<div>
  <ul>
    <% @lists.each do |list| %>
      <li class='card m-3 p-3 col-6'><%= list.name %>
      <%= link_to 'Details', list_path(list), class: 'btn btn-success' %></li>
    <% end %>
  </ul>
</div>

<div>
  <%= link_to 'Add list', new_list_path, class: 'btn btn-primary m-5' %>
</div>
